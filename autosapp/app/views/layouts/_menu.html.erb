<div class="container-fluid">
  <nav class="navbar navbar-dark bg-inverse">
    <div class="row">
      <div class="col-xs-2">
        <%= link_to "Home", root_path, class: "navbar-brand" %>
      </div>

      <% if signed_in? %>
          <div class="col-xs-8 float-xs-left">
            <ul class="nav navbar-nav">
              <% if policy(:menu).owner? %>
                  <li class="nav-item">
                    <a class="nav-link" href="#">Locations <span class="sr-only">(current)</span></a>
                  </li>
              <% end %>

              <% if policy(:menu).inventory? %>
                  <li class="nav-item">
                    <a class="nav-link" href="#"> Inventory </a>
                  </li>
              <% end %>

              <% if policy(:menu).sales? %>
                  <li class="nav-item">
                    <a class="nav-link" href="#"> Sales </a>
                  </li>
              <% end %>
            </ul>
          </div>

          <div class="col-xs-2 float-xs-right">
            <ul class="nav navbar-nav">
              <li class="nav-item">
                <%= button_to 'Sign out', sign_out_path, method: :delete, class: "nav-link" %>
              </li>
            </ul>
          </div>
      <% end %>
    </div>
  </nav>

</div>
